<UserControl x:Class="AudioPlayer.WPF.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AudioPlayer.WPF.Components"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{DynamicResource DarkBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"
                              MaxWidth="400" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <local:Sidebar Grid.Column="0" DataContext="{Binding SidebarViewModel}" />

        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      Background="Aquamarine" />


        <ContentControl Grid.Column="2"
                        Content="{Binding ContentViewModel}">

        </ContentControl>
    </Grid>
</UserControl>